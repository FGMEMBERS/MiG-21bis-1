<PropertyList>

    <path>Gunsight.ac</path>
	
	<!-- list of objects in Gunsight.ac:
	angleDisplay - front right angle display next to knob
	bottomNeedle - needle for bottomScale
	bottomScale - glass bottom scale
	gunsight - main housing
	gunsight-glass - hud glass
	knobFixedNetBrightness
	knobPipperAngularCorrection
	knobPipperBrightness
	knobTargetSize
	lightLaunch
	lightNoLaunch
	projector-cover (glass)
	sight - actual canvas sight
	switchAutoMan
	switchFixedNet
	switchGunMissile
	switchPipModeSel - Missiles/Bombs or Gunsaa
	switchPipper
	switchPipperMode - Gyro or Non Gyro
	targetSizeDisplay
	topNeedle
	topScale
	-->
	
	<!-- Rembrandt -->
	
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <greater-than>
                <property>sim/multiplay/generic/float[6]</property>
                <value>9</value>
            </greater-than>
            <property>/sim/rendering/rembrandt/enabled</property>
		</condition>
		<object-name>sight</object-name>
		<object-name>gunsight-glass</object-name>
    </effect>
	
	<animation>
		<type>material</type> 
		<object-name>sight</object-name>
		<emission>	
			<red>1</red>	
			<green>1</green>	
			<blue>1</blue>
		</emission>
	</animation>
	
	<!-- Shaders -->

	<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<texture>Aircraft/Generic/Effects/glass_shader.png</texture>
		<object-name>sight</object-name>
		<object-name>gunsight-glass</object-name>
	</animation>
	
	<animation>
		<type>noshadow</type>
		<object-name>sight</object-name>
		<object-name>gunsight-glass</object-name>
	</animation>
	
	<!-- Animations -->
	
	<!-- left four switches -->
	
	<animation>
		<type>pick</type>
		<object-name>switchGunMissile</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/armament/gunsight/gun-missile-switch</property>
			</binding>
		</action>
	</animation>
	
	<animation>
		<object-name>switchGunMissile</object-name>
		<type>rotate</type>
		<property>controls/armament/gunsight/gun-missile-switch</property>
		<factor>50</factor>
		<offset-deg>-25</offset-deg>
		<center>
			<x-m>-3.93359</x-m>
			<y-m>-0.12332</y-m>
			<z-m> 0.96043</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switchPipModeSelect</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
