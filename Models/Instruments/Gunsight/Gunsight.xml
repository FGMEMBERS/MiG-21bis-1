				<min>0</min>
				<max>10</max>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>knobPipperBrightness</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/gunsight/pipper-brightness-knob</property>
				<step>0.05</step>
				<min>0</min>
				<max>1.05</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/gunsight/pipper-brightness-knob</property>
				<step>-0.05</step>
				<min>0</min>
				<max>1.05</max>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>knobFixedNetBrightness</object-name>
