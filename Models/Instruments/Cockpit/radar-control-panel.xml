	<!-- RELOAD BUTTONS -->
	
	<animation>
		<type>pick</type>
		<object-name>reload1</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/armament/panel/reload[0]</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/armament/panel/reload[0]</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>reload1</object-name>
		<property>controls/armament/panel/reload[0]</property>
		<factor>0.004</factor>
		<axis>
			<x>-0.00412</x>
			<y>-0.00073</y>
			<z> 0.00000</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>reload2</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/armament/panel/reload[1]</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/armament/panel/reload[1]</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>reload2</object-name>
		<property>controls/armament/panel/reload[1]</property>
		<factor>0.004</factor>
		<axis>
			<x>-0.00412</x>
			<y>-0.00073</y>
			<z> 0.00000</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>reload3</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>controls/armament/panel/reload[2]</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-cycle</command>
					<property>controls/armament/panel/reload[2]</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>reload3</object-name>
		<property>controls/armament/panel/reload[2]</property>
		<factor>0.004</factor>
		<axis>
			<x>-0.00412</x>
			<y>-0.00073</y>
			<z> 0.00000</z>
		</axis>
	</animation>
	
	<!-- SWITCHES -->
	
	<animation>
		<type>pick</type>
		<object-name>airGndSwitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/panel/air-gnd-switch</property>
				<step>-1</step>
				<min>0</min>
				<max>2</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/panel/air-gnd-switch</property>
				<step>1</step>
				<min>0</min>
				<max>2</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<object-name>airGndSwitch</object-name>
		<type>rotate</type>
		<property>controls/armament/panel/air-gnd-switch</property>
		<factor>35</factor>
		<offset-deg>-35</offset-deg>
		<center>
			<x-m>-3.87843</x-m>
			<y-m>-0.33518</y-m>
			<z-m> 0.83899</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	
	<animation>
		<type>pick</type>
		<object-name>irSarSwitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/panel/ir-sar-switch</property>
				<step>-1</step>
				<min>0</min>
				<max>2</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/panel/ir-sar-switch</property>
				<step>1</step>
				<min>0</min>
				<max>2</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<object-name>irSarSwitch</object-name>
		<type>rotate</type>
		<property>controls/armament/panel/ir-sar-switch</property>
		<factor>35</factor>
		<offset-deg>-35</offset-deg>
		<center>
			<x-m>-3.88583</x-m>
			<y-m>-0.30205</y-m>
			<z-m> 0.83899</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- KNOB -->
	
	<animation>
		<type>pick</type>
		<object-name>weaponSelectorKnob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>controls/armament/panel/pylon-knob</property>
				<step>1</step>
				<min>0</min>
				<max>11</max>
				<wrap>true</wrap>
			</binding>
		</action>
