				<ind>10</ind>
				<dep>280</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>-3.89615</x-m>
			<y-m>-0.25594</y-m>
			<z-m> 0.88658</z-m>
		</center>
		<axis>
			<x>-10</x>
			<y>-1</y>
			<z>0</z>
		</axis>
