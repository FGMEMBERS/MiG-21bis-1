<?xml version="1.0"?>
<PropertyList>

    <path>radio.ac</path>

	<!--lights-->
	
	<animation>
			<type>material</type>
				<object-name>ils1</object-name>
				<object-name>ils10</object-name>
				<object-name>vor1</object-name>
				<object-name>vor10</object-name>
			<emission>
				 <red>0.6</red>
				 <green>0.3</green>
				 <blue>0.3</blue>
				<factor-prop>controls/lighting/instruments-norm</factor-prop>
			</emission> 
	</animation>
	
	
	<animation>
        <type>material</type>
        <object-name>lightAzm</object-name>
		<ambient>
			<red>0.0</red>
			<green>0.2</green>
			<blue>0.0</blue>
		</ambient>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
            <factor-prop>controls/radar/panel/continuous-jam</factor-prop>
        </emission> 
    </animation>
	
	<animation>
        <type>material</type>
        <object-name>lightDist</object-name>
		<ambient>
			<red>0.0</red>
			<green>0.2</green>
			<blue>0.0</blue>
		</ambient>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
            <factor-prop>controls/radar/panel/intermittent-jam</factor-prop>
        </emission> 
    </animation>	
	
	<!-- picks and translations -->
	
	<animation>
		<type>pick</type>
		<object-name>knobVor</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/vor-radio/selection</property>
				<step>1</step>
				<min>0</min>
				<max>19</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/vor-radio/selection</property>
				<step>-1</step>
				<min>0</min>
				<max>19</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>knobIls</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/ils-radio/selection</property>
				<step>1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/ils-radio/selection</property>
				<step>-1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>knobVolume</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/volume</property>
				<step>0.1</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[1]/volume</property>
				<step>0.1</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/volume</property>
				<step>-0.1</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[1]/volume</property>
				<step>-0.1</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<!-- texture translations -->

	<animation>
		<type>textranslate</type>
		<object-name>vor10</object-name>
		<property>/instrumentation/vor-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>vor1</object-name>
		<property>/instrumentation/vor-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.1</factor>
		<step>1.0</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>ils10</object-name>
		<property>/instrumentation/ils-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ils1</object-name>
		<property>/instrumentation/ils-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
</PropertyList>